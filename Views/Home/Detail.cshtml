@model Movie

<div class="row">
    <div class="card mb-3">
        <div class="card-body">
            <div class="row no-gutters">
                <div class="col-md-3">
                    <img src="~/img/@Model.ImageUrl" alt="@Model.Name" class="card-img" />
                </div>
                <div class="col-md-9 pl-2">
                    <h5 class="card-title">
                        @Model.Name
                    </h5>
                    <p class="card-text">@Html.Raw(Model.Description)</p>
                    <p class="card-text"><small class="text-muted">3 days ago</small></p>
                </div>
            </div>
        </div>
    </div>
</div>


